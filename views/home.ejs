<%- include("./partials/header") %>
    <nav class="navbar navbar-light bg-dark">
        <a class="navbar-brand" style="margin-left: 45%; color: chartreuse;" href="/">Todo App</a>
    </nav>

    <div class="container mt-5">
        <form action="/add/todo" method="POST" class="d-flex sticky-top">
            <input type="text" name="todo" class="form-control " placeholder="What's there for today ?">
            <input type="submit" value="Add Todo" class="btn btn-md btn-primary mx-2">
        </form>


        <ul class="list-group my-5">
            <% todo.forEach(todos=> { %>
                <li class="list-group-item shadow p-2 bg-body rounded">
                    <%= todos.todo %> 
                    <div class="dbut" style="display: block;">
                        <a href="/delete/todo/<%= todos._id %>" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </li>

                <% }) %>
        </ul>
    </div>

    <%- include("./partials/footer") %>